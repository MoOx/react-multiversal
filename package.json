{
  "version": "0.0.0",
  "name": "react-multiversal",
  "license": "MIT",
  "files": [
    "*",
    "!.DS_Store",
    "!**/*.bs.js",
    "!.merlin",
    "!lib/bs",
    "!lib/ocaml"
  ],
  "scripts": {
    "format:most": "prettier --write \"**/*.{md,json,js,css}\"",
    "format:re": "find . -name \"*.re\" -or -name \"*.rei\" | grep -v \"node_modules\" | xargs bsrefmt --in-place",
    "format": "yarn format:most && yarn format:re",
    "re:start": "bsb -make-world -w",
    "re:build": "bsb -make-world",
    "re:clean-build": "bsb -clean-world -make-world",
    "start": "yarn re:start",
    "build": "yarn re:build",
    "test": "yarn re:clean-build"
  },
  "peerDependencies": {
    "@react-native-community/blur": "^3.4.1",
    "@reason-react-native/safe-area-context": "^3.1.0",
    "bs-platform": "^9.0.0",
    "react-native-safe-area-context": "^3.0.0",
    "reason-react-native": "^0.63.0",
    "reason-react": "^0.9.0"
  },
  "devDependencies": {
    "@react-native-community/blur": "^3.4.1",
    "@reason-react-native/safe-area-context": "^3.1.0",
    "bs-platform": "^9.0.0",
    "husky": "^1.3.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.18.0",
    "react-native-safe-area-context": "^3.0.0",
    "reason-react-native": "^0.63.0",
    "reason-react": "^0.9.0"
  },
  "prettier": {
    "trailingComma": "all",
    "proseWrap": "always"
  },
  "lint-staged": {
    "*.{md,json,js,css}": [
      "prettier --write",
      "git add"
    ],
    "*.{re,rei}": [
      "bsrefmt --in-place",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
